<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0A0E1A"
    android:orientation="vertical"
    tools:ignore="ExtraText">

    <View
        android:layout_width="365dp"
        android:layout_height="490dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="140dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="@drawable/bordeperfil" />

    <EditText
        android:id="@+id/etNombre"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:textColorHint="@color/black"
        android:layout_marginTop="-380dp"
        android:layout_marginRight="20dp"
        android:hint="  Nombre" />

    <EditText
        android:id="@+id/etCorreo"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_below="@id/etNombre"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:textColorHint="#000000"
        android:layout_marginRight="20dp"
        android:hint=" Correo Electronico"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/etEdad"
        android:layout_width="330dp"
        android:layout_height="48dp"
        android:layout_below="@id/etCorreo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp"
        android:textColorHint="#000000"
        android:hint=" Edad"
        android:inputType="number" />

    <Button
        android:id="@+id/btnGuardarPerfil"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="65dp"
        android:layout_marginTop="20dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1D3557"
        android:text="Guardar perfil" />

    <Button
        android:id="@+id/btnEliminarPerfil"
        android:layout_width="120dp"
        android:layout_height="70dp"
        android:layout_marginStart="220dp"
        android:layout_marginTop="-70dp"
        android:textColor="#FFFFFF"
        android:backgroundTint="#1D3557"
        android:text="Eliminar perfil" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="-380dp"
        android:text="Registro:"
        android:textColor="#1D3557"
        android:textSize="40sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />



</LinearLayout>
